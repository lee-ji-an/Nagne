<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="메뉴"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_margin="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:gravity="center">
                <Button
                    android:id="@+id/travelRecommend"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="관광추천"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_margin="20dp"
                    android:background="@drawable/menu_button"
                    android:drawableTop="@drawable/btn_airplane"
                    android:scaleType="centerInside"/>
                <Button
                    android:id="@+id/travelDiary"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="여행일지"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/menu_button"
                    android:drawableTop="@drawable/btn_note"
                    android:textStyle="bold"
                    android:layout_margin="20dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘의 관광지 추천"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_margin="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="175dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_recommend"
                    android:drawableTop="@drawable/btn_recommend_image1"
                    android:text="제주도\n함덕 해수욕장"/>

                <Button
                    android:layout_width="175dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_recommend"
                    android:drawableTop="@drawable/btn_recommend_image1"
                    android:text="제주도\n함덕 해수욕장"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="175dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_recommend"/>
                <Button
                    android:layout_width="175dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_recommend"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>